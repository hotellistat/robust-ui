{
  "compilerOptions": {
    "module": "ESNext",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist/src",
    "declaration": true,
    "allowJs": true,
    "types": [
      "vite/client",
      "web-bluetooth"
    ],
    "typeRoots": [
      "./src/types"
    ]
  },
  "include": [
    "src/*.d.ts",
    "src/**/*",
  ],
  "exclude": [
    "src/**/*.stories.js",
    "src/**/*.stories.ts",
    "src/styles.ts",
    "src/**/__test__/**/*"
  ]
}