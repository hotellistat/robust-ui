{
  "compilerOptions": {
    "module": "ESNext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "declaration": true,
    "allowJs": true,
    "types": ["vite/client", "web-bluetooth"],
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": [
    "src/**/*.stories.js",
    "src/**/*.stories.ts",
    "src/styles.ts",
    "src/**/__test__/**/*"
  ]
}
